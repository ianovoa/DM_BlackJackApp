<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.uvigo.ingonzalezesei.blackjackapp.MainGame">


    <ImageView
        android:id="@+id/ivRegresar2"
        android:layout_width="89dp"
        android:layout_height="66dp"
        android:layout_marginLeft="294dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/volver" />

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight=".1"
            android:text="Mayor numero de victorias:" />

        <TextView

            android:id="@+id/numVictoriasMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_weight=".9"
            android:text="TextView" />

    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight=".1"
            android:text="Dinero maximo ganado:" />

        <TextView

            android:id="@+id/dinMaxGanado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight=".9"
            android:text="TextView" />

    </LinearLayout>


</LinearLayout>